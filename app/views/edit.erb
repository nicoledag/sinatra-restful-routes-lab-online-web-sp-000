<h1>Edit your recipe here</h1>

<form action="/recipes/<%= @recipe.id%>" method="POST">

  <input id="hidden" type="hidden" name="_method" value="PATCH">

  <h3>Name: <%=@recipe.name%></h3>
  <h3><label for="name">Name: </label>
  <input type="text" id="name" name="name"></input></h3>

  <h3>Ingredients: <%=@recipe.ingredients%></h3>
  <h3><label for="ingredients">Ingredients: </label>
  <input type="text" id="ingredients" name="ingredients"></input></h3>

  <h3>Cook Time: <%=@recipe.cook_time%></h3>
  <h3><label for="cook_time">Cook Time: </label>
  <input type="text" id="cook_time" name="cook_time"></input></h3>

  <input type="submit" value="submit">

</form>
